packages:
  yum:
    git: []
    gcc: []
    make: []
    openssl-devel: []

option_settings:
  - option_name: NODE_ENV
    value: production
  - option_name: RDS_HOSTNAME
    value: fill_me_in
  - option_name: RDS_PASSWORD
    value: fill_me_in
  - option_name: RDS_USERNAME
    value: fill_me_in
  - namespace: aws:elasticbeanstalk:container:nodejs
    option_name: NodeVersion
    value: 0.12.6

files:
  "/opt/elasticbeanstalk/env.vars" :
    mode: "000775"
    owner: root
    group: users
    content: |
      export HOME=/root
      export NPM_CONFIG_LOGLEVEL=error
      export NODE_VER=0.12.6
      export ARCH=x86
      export PATH="$PATH:/opt/elasticbeanstalk/node-install/node-v$NODE_VER-linux-$ARCH/bin/:/root/.npm"
  "/opt/elasticbeanstalk/hooks/configdeploy/pre/40install_node.sh" :
    mode: "000775"
    owner: root
    group: users
    source: https://github.com/kopurando/better-faster-elastic-beanstalk/raw/master/40install_node.sh
  "/opt/elasticbeanstalk/hooks/configdeploy/pre/40config_deploy.sh" :
    mode: "000775"
    owner: root
    group: users
    source: https://github.com/kopurando/better-faster-elastic-beanstalk/raw/master/40config_deploy.sh
  "/opt/elasticbeanstalk/hooks/appdeploy/pre/50npm.sh" :
    mode: "000775"
    owner: root
    group: users
    source: https://github.com/kopurando/better-faster-elastic-beanstalk/raw/master/50npm.sh
  "/opt/elasticbeanstalk/hooks/configdeploy/pre/50npm.sh" :
    mode: "000666"
    owner: root
    group: users
    content: |
       #no need to run npm install during configdeploy
  "/opt/elasticbeanstalk/hooks/appdeploy/pre/40install_node.sh" :
    mode: "000775"
    owner: root
    group: users
    source: https://github.com/kopurando/better-faster-elastic-beanstalk/raw/master/40install_node.sh
    
    
